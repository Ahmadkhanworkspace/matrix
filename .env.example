# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/matrix_mlm_db"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@matrixmlm.com

# Payment Gateway Configuration

# CoinPayments
COINPAYMENTS_MERCHANT_ID=your-merchant-id
COINPAYMENTS_IPN_SECRET=your-ipn-secret
COINPAYMENTS_PRIVATE_KEY=your-private-key
COINPAYMENTS_PUBLIC_KEY=your-public-key

# NOWPayments
NOWPAYMENTS_API_KEY=your-api-key
NOWPAYMENTS_IPN_SECRET=your-ipn-secret
NOWPAYMENTS_PAYOUT_CURRENCY=usdt

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Flutterwave
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key

# Paystack
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Crypto Payment
CRYPTO_NETWORK=ethereum
CRYPTO_WALLET_ADDRESS=your-crypto-wallet-address
CRYPTO_PRIVATE_KEY=your-crypto-private-key

# Bank Transfer
BANK_TRANSFER_ACCOUNT_NAME=your-bank-account-name
BANK_TRANSFER_ACCOUNT_NUMBER=your-bank-account-number
BANK_TRANSFER_BANK_NAME=your-bank-name
BANK_TRANSFER_SWIFT_CODE=your-swift-code

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Matrix Configuration
MATRIX_LEVELS=15
MATRIX_WIDTH=2
MATRIX_DEPTH=8
MIN_WITHDRAWAL=10
WITHDRAWAL_FEE=2

# Cron Job Configuration
CRON_MATRIX_INTERVAL="*/2 * * * *"
CRON_PAYMENT_INTERVAL="*/5 * * * *"
CRON_EMAIL_INTERVAL="*/10 * * * *"
CRON_CLEANUP_INTERVAL="0 2 * * *"
CRON_EXCHANGE_RATES_INTERVAL="0 */6 * * *"

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# Default Currency Configuration
DEFAULT_CURRENCY=USD
BASE_CURRENCY=USD

# Payment Gateway Default Settings
DEFAULT_PAYMENT_GATEWAY=STRIPE
AUTO_APPROVE_PAYMENTS=false
AUTO_APPROVE_WITHDRAWALS=false

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000 